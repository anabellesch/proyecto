# Entorno (desarrollo/produccion)
ENTORNO=desarrollo

# Configuración de red
RED_IP_OBJETIVO=192.168.1.100
RED_SERVIDOR_DATOS=192.168.1.100
RED_PUERTO_DATOS=5555
RED_PUERTO_WEB=8080

# Configuración de monitoreo
MONITOR_INTERVALO=1
MONITOR_MAX_MUESTRAS=3600
MONITOR_NUM_PINGS=5
MONITOR_COMANDO_IPERF=iperf3

# Configuración del modelo
MODELO_VENTANA=60
MODELO_VENTANA_ENTRENAMIENTO=10
MODELO_ALGORITMO=random_forest
MODELO_RF_ESTIMADORES=100
MODELO_RF_MAX_DEPTH=10
MODELO_REENTRENAMIENTO=1000

# Umbrales de congestión
UMBRAL_LATENCIA=100
UMBRAL_PERDIDA=2.0
UMBRAL_ANCHO_BANDA=50
UMBRAL_JITTER=20

# Configuración de alertas
ALERTAS_UMBRAL=0.7
ALERTAS_TIEMPO_MIN=300
ALERTAS_CONSOLA=true
ALERTAS_EMAIL=false
ALERTAS_SMS=false

# Configuración de correo para alertas
ALERTAS_EMAIL_DESTINATARIOS=admin@example.com,soporte@example.com
ALERTAS_EMAIL_REMITENTE=alertas@example.com
ALERTAS_EMAIL_SERVIDOR=smtp.example.com
ALERTAS_EMAIL_PUERTO=587

# Configuración de logging
LOG_NIVEL=INFO